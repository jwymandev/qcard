# App
NEXT_PUBLIC_APP_URL=http://localhost:3001

# NextAuth
NEXTAUTH_URL=http://localhost:3001
# Generate a new secret with: `openssl rand -base64 32`
NEXTAUTH_SECRET=your_random_secret_here

# Authentication settings
# Set to 'true' to enable emergency authentication mode (allows any user to log in)
ENABLE_EMERGENCY_AUTH=false

# Database - PostgreSQL for all environments (recommended)
# For local PostgreSQL development (update with your local credentials)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/qcard?schema=public"

# For production PostgreSQL
# DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"

# PostgreSQL Individual Parameters (alternative to full connection string)
# DATABASE_HOST=your_database_host
# DATABASE_PORT=your_database_port
# DATABASE_USERNAME=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_NAME=your_database_name

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key